<div class="listbox col-xs-10 col-xs-offset-1">
    <h3><%= link_to "Add New Category", new_category_path %></h3>

<!--Testing accordion feature-->

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <% @category.each do |category| %>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="heading#{category.id}">
      <h4 class="panel-title">
          <%= link_to category.name, '#collapse#{category.id}', role: :button,
          data: { parent: '#accordion', toggle: :collapse },
          aria: { controls: "collapse#{category.id}", expanded: true } %>
          - <span> id <%= category.id %></span>
      </h4>
    </div>
    <div id="collapse#{category.id}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading#{category.id}">
        <% category.sections.each do |section| %>
          <div class="list-group">
            <p> <%= section.name %> - <span><%= section.description %></span></p>
          </div>
        <% end %>
    </div>
  </div>
  <% end %>
</div>

<!--Testing accordion feature-->

</div>
<br class="clear">
