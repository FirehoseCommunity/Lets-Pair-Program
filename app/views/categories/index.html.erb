<div class="listbox col-xs-10 col-xs-offset-1">
    <h4><%= link_to "Add New Category", new_category_path %> <====> <span><%= link_to "See all posts", posts_path %></span></h4>

<!--Testing accordion feature-->

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <% @category.each do |category| %>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="heading<%=category.id%>">
      <h4 class="panel-title">
          <%= link_to category.name, "#category#{category.id}", role: :button,
          data: { parent: '#accordion', toggle: :collapse },
          aria: { controls: "collapse#{category.id}", expanded: true } %>
          - <span><%= link_to "add section", category_path(category) %></span>
      </h4>
    </div>
    <div id="category<%=category.id%>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading<%=category.id%>">
        <% category.sections.each do |section| %>
          <div class="list-group">
            <p> <%= section.name %> - <span><%= link_to "add post", new_section_post_path(section)%></span></p>
          </div>
        <% end %>
    </div>
  </div>
  <% end %>
</div>

<!--Testing accordion feature-->

</div>
<br class="clear">
