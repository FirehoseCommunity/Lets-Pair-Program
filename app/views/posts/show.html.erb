<div class="col-xs-10 col-xs-offset-1">
  <h2>
    <%= @post.title %>
  </h2>
  <p>
    <%= @post.message %>
  </p>

  <hr />

  <div>
    <h4>Replies</h4>
    <% @post.replies.each do |reply| %>
      <p>
        <%= reply.message %>
      </p>
        -- <%= reply.user.email %>
      <br />
      <br />
    <% end %>
  </div>

  <% if user_signed_in? %>
    <%= simple_form_for @reply, url: reply_post_path do |f| %>
      <%= f.input :message, label: 'Reply', as: :pagedown, input_html: { rows: 10 } %>
      <%= f.submit "SUBMIT", class: "btn btn-info" %>
    <% end %>
  <% end %>

</div>
